<div class="row margin-top">
    <div class="col-6">
        <ul class= "vertical-center">
            <li><h1>Tech Blog</h1></li>
            <li><h3>Connect with bloggers around the</h3></li>
            <li><h3>world on Tech Blog.</h3></li>
        </ul>
    </div>

    <div class="col-6">
        <center>
            <form class="signup-form col-10">
                <div class="row">
                    <p class="warning" id="warningEl"></p>
                </div>

                <div class="row">
                    <div class="col-6 padding-left-0">
                        <input class="input" id="first_name" placeholder="First Name"></input>
                    </div>
                    <div class="col-6 padding-right-0">
                        <input class="input" id="last_name" placeholder="Last Name"></input>
                    </div>
                </div>

                <div class="row">
                    <input class="input" id="username" placeholder="Username"></input>
                </div>

                <div class="row">
                    <input class="input" type="email" id="email" placeholder="Email"></input>
                </div>

                <div class="row">
                    <input class="input" type="password" id="password" placeholder="Password"></input>
                </div>

                <div class="row">
                    <input class="input" type="password" id="verify" placeholder="Verify Password"></input>
                </div>

                <div class="row">
                    <button class="btn" type="submit">Sign Up</button>
                </div>
            </form>

            <div class="col-6">
                <div class="row">
                    <a class="btn" href="/login">Log In</a>
                </div>
            </div>
        </center>
    </div>
</div>

<script src="/javascript/signup.js"></script>