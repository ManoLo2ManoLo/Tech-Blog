<div class="row margin-top">
    <div class="col-4">
        <div class="row">
            <h2 class="white-text">{{user.first_name}} {{user.last_name}}</h2>
        </div>

        <div class="row">
            <h3 class="white-text">@{{user.username}}</h3>
        </div>

        <div id="about_me_text" class="row margin-top-sm">
            <center>
                <div class="col-9">
                    <h4 class="white-text">About Me</h4>
                    <p class=" white-text">{{user.about_me}}</p>
                </div>
            </center>
        </div>

        <div class="row margin-top-sm" id="interests_text">
            <center>
                <div class="col-9">
                    <h4 class="white-text">Interest</h4>
                    <p class="white-text">{{user.interests}}</p>
                </div>
            </center>
        </div>
    </div>

    <div class="col-8">
        <div class="col-12 post-section">
            <div class="row">
                <center>
                    <div class="col-6">
                        <h1 class="white-text">My Blog Posts:</h1>
                    </div>
                </center>
            </div>
            {{#each user.posts as |post|}}
            <div class="row margin-top-sm">
                <div class="col-12 new-post">
                    <div class="row">
                        <div class="col-6">
                            <p class="post-title">{{post.title}}</p>
                        </div>
                    </div>

                    <div class="row">
                        <p class="post-body">{{post.body}}</p>
                    </div>
                    <br><br>
                    <div class="row">
                        <div class="col-6">
                            <p class="post-time">Posted On: {{post.createdAt}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>